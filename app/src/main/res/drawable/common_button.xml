<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/common_button_solid"/>
            <stroke
                android:width="2dp"
                android:color="@color/common_button_stork"/>
            <padding
                android:bottom="2dp"
                android:left="3dp"
                android:right="3dp"
                android:top="2dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/common_button_solid_pressed"/>
            <stroke
                android:width="2dp"
                android:color="@color/common_button_stork_pressed"/>
            <padding
                android:bottom="0dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp"/>
        </shape>
    </item>
</selector>